extends layout

block content
  h1 #{name}
  form(method='POST', action='/add')
    .form-group
      label name:
      input.form-control(name='name', type='text')
    .form-group
      label imgSrc:
      input.form-control(name='imgSrc', type='text')
    .form-group
      label textBrief:
      textarea.form-control(name='textBrief')
    br
    input.btn.btn-primary(type='submit', value='Submit')
